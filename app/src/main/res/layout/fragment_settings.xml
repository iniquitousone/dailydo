<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.finaldrive.dailydo.SettingsFragment">

    <LinearLayout
        android:id="@+id/daily_reset_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/daily_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOs are scheduled to uncheck daily at"
                android:textColor="@color/teal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_reset_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="52sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:src="@drawable/drop_shadow"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/drop_shadow" />

    <LinearLayout
        android:id="@+id/notification_tone_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/daily_reset_wrapper"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/notification_tone_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification tone"
                android:textColor="@color/teal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_tone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default tone"
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:src="@drawable/drop_shadow"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
