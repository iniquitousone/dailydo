<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height" />

    <com.finaldrive.dailydo.view.DynamicListView
        android:id="@+id/task_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@dimen/listview_divider_height"
        android:paddingTop="@dimen/listview_divider_height" />

    <LinearLayout
        android:id="@+id/empty_task_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_logo_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Add a DO with the plus button above\n\nThen schedule your notifications with the alarm button"
            android:textColor="@color/silver" />

    </LinearLayout>

</LinearLayout>
