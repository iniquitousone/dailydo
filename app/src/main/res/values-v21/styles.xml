<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MainActionBarStyle</item>
        <item name="colorPrimary">@color/amber</item>
        <item name="colorPrimaryDark">@color/dark_amber</item>
        <item name="colorAccent">@color/teal</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="MainActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/amber</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Details theme -->
    <style name="DetailsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/DetailsActionBarStyle</item>
        <item name="colorPrimary">@color/amber</item>
        <item name="colorPrimaryDark">@color/dark_teal</item>
        <item name="colorAccent">@color/teal</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="DetailsActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/teal</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Transparent theme designed for the SnoozePickerActivity -->
    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
